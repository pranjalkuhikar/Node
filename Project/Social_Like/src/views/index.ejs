<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pranjal Social Media</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="bg-gray-100">
    <div class="max-w-2xl mx-auto p-4">
      <!-- Header -->
      <header
        class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg mb-6"
      >
        <h1 class="text-2xl font-bold text-blue-500 font-[Mona Sans]">
          SocialMedia
        </h1>
        <div class="flex items-center space-x-4">
          <i class="fas fa-home text-xl text-gray-700"></i>
          <i class="fas fa-search text-xl text-gray-700"></i>
          <i class="fas fa-user text-xl text-gray-700"></i>
          <a
            href="/create"
            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-200"
            >Create Post</a
          >
        </div>
      </header>

      <!-- Posts -->
      <% user.forEach(function(post) { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
        <div class="flex items-center p-4">
          <img
            class="h-10 w-10 rounded-full"
            src="<%= post.profile %>"
            alt="User"
          />
          <div class="ml-3">
            <p class="font-bold"><%= post.username %></p>
            <p class="text-sm text-gray-600"><%= post.location %></p>
          </div>
        </div>
        <img class="w-full" src="<%= post.postImage %>" alt="Post Image" />
        <div class="p-4">
          <p class="text-gray-800"><%= post.caption %></p>
        </div>
        <div class="p-4 flex items-center justify-between">
          <button class="like-button flex items-center space-x-2">
            <i class="far fa-heart text-xl"></i>
            <span>Like</span>
          </button>
          <button class="comment-button flex items-center space-x-2">
            <i class="far fa-comment text-xl"></i>
            <span>Comment</span>
          </button>
        </div>
      </div>
      <% }); %>

      <!-- Footer -->
      <footer class="text-center py-4 mt-6 bg-white shadow-md rounded-lg">
        <p class="text-gray-600">
          &copy; 2023 Instagram Clone. All rights reserved.
        </p>
      </footer>
    </div>

    <script>
      document.querySelectorAll(".like-button").forEach((button) => {
        button.addEventListener("click", function () {
          const heartIcon = this.querySelector("i");
          heartIcon.classList.toggle("far");
          heartIcon.classList.toggle("fas");
          heartIcon.classList.toggle("text-red-500");
        });
      });
    </script>
  </body>
</html>

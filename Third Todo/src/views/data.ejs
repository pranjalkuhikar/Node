<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo Data</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white">
    <div
      class="container mx-auto p-4 h-screen flex flex-col justify-center items-center"
    >
      <h1 class="text-4xl font-bold mb-8 text-center">Todo Data</h1>
      <div class="bg-gray-800 shadow-lg rounded-lg p-8 w-full max-w-4xl">
        <table class="min-w-full table-auto">
          <thead>
            <tr class="bg-gray-700">
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"
              >
                Todo
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% todos.forEach(function(todo, index) { %>
            <tr class="bg-gray-600 border-b border-gray-700">
              <td class="px-6 py-4 whitespace-nowrap"><%= todo %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <form action="/delete" method="POST" class="inline">
                  <input type="hidden" name="index" value="<%= index %>" />
                  <button
                    type="submit"
                    class="bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="mt-8 text-center">
          <a
            href="/"
            class="bg-indigo-600 text-white py-3 px-6 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Go Back
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
